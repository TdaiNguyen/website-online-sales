@model FASTFOOD.TAIKHOAN

@{
    ViewBag.Title = "EditInfo";
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}

<section class="signup">
    <div class="container-layout-account">
        <h2 class="form-title text-center pt-5">Thông tin cá nhân</h2>
        <div class="signup-content">
            <div class="signup-image">
                @if (Model.AVATAR == null)
                {
                    <div class="m-b-25">
                        <img src="@Url.Content("~/Content/Images/userprofile.png")" class="img-radius rounded rounded-3" width="400px" height="400px" alt="User-Profile-Image">
                    </div>
                }
                else
                {
                    <div class="m-b-25">
                        <img src="@Url.Content("~/Content/Images/Users/"+Model.AVATAR)" class="img-radius rounded rounded-3" width="400px" height="400px" alt="User-Profile-Image">
                    </div>
                }

                <a href="#" class="signup-image-link">I am already member</a>
            </div>
            <div class="signup-form">

              
                    @using (Html.BeginForm("EditInfo", "Account", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            First name:
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.FIRSTNAME, new { htmlAttributes = new { @class = "zmdi zmdi-account" } })
                                @Html.ValidationMessageFor(model => model.FIRSTNAME, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            Last name:
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.LASTNAME, new { htmlAttributes = new { @class = "zmdi zmdi-account" } })
                                @Html.ValidationMessageFor(model => model.LASTNAME, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            Address:
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.DIACHI, new { htmlAttributes = new { @class = "zmdi zmdi-city" } })
                                @Html.ValidationMessageFor(model => model.DIACHI, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            Avatar:
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.AVATAR, new { htmlAttributes = new { @type = "file", @name = "FileUpload" } })
                                @Html.ValidationMessageFor(model => model.AVATAR, "", new { @class = "text-danger" })
                            </div>
                        </div>


                <div class="form-group " style="padding-right: 95px;">
                    <div class="col-md-6"  style="float: right;">
                        <input type="submit" value="Lưu" class="btn btn-outline-success" />
                        
                    </div>
                    <div class="col-md-6"><a href="/Account/DetailCustomer" class="btn btn-outline-info">Trở lại</a></div>
                </div>
                    }
                </div>
            </div>
        </div>
    </section>

          
