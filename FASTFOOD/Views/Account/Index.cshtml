
@model FASTFOOD.Models.LoginModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}
<div id="main">
    <section class="sign-in MT-5">
        <div class="container-layout-account">
            <div class="signin-content">
                <div class="signin-image">
                    <figure><img src="~/Assets/account/images/biaga.jpg" alt="sing up image" /></figure>
                           
                    <a href="/Account/Register" class="signup-image-link">Tạo tài khoản mới</a>
                </div>
                <div class="signin-form">

                    <h2 class="form-title" style="FONT-FAMILY: sans-serif">ĐĂNG NHẬP</h2>

                    <form method="POST" class="register-form" id="login-form">
                        @using (Html.BeginForm("Index", "Account", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                            <div class="form-group">
                                <label for="your_name"><i class="zmdi zmdi-account "></i></label>
                                @Html.TextBoxFor(model => model.Email,
                                   new
                                   {
                                       @class = "zmdi zmdi-account ",
                                       @type = "text",
                                       @placeholder = "Your name",
                                       @id = "your_name",
                                       @required = true,
                                   })
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label for="your_pass"><i class="zmdi zmdi-lock"></i></label>
                                @Html.TextBoxFor(model => model.Password,
                            new
                            {
                                @class = "zmdi zmdi-lock",
                                @type = "password",
                                @placeholder = "Password",
                                @id = "password",
                                @required = true,
                            })
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                            </div>
                            @ViewBag.ErrorMessage
                            <div class="form-group">
                                <input type="checkbox" name="remember-me" id="remember-me" class="agree-term" />
                                <label for="remember-me" class="label-agree-term"><span><span></span></span>Remember me</label>
                            </div>
                            <div class="form-group form-button">
                                <input type="submit" name="signin" id="signin" class="form-submit" value="Đăng nhập" />
                            </div>
                        }
                    </form>
                    
                    
                    <div class="social-login">
                        <span class="social-label">Or login with</span>
                        <ul class="socials">
                            <li><a href="#"><i class="display-flex-center zmdi zmdi-facebook"></i></a></li>
                            <li><a href="#"><i class="display-flex-center zmdi zmdi-twitter"></i></a></li>
                            <li><a href="#"><i class="display-flex-center zmdi zmdi-google"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>
    </div>

