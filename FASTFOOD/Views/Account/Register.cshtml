@model FASTFOOD.Models.RegisterModel


@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}
<div id="main">
    <section class="signup ">
        <div class="container-layout-account">
            <div class="signup-content">
                <div class="signup-form">
                    <h2 class="form-title" style="FONT-FAMILY: sans-serif;">ĐĂNG KÝ</h2>
                    <form method="POST" class="register-form" id="register-form">
                        @using (Html.BeginForm("index", "home", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                <label for="name"><i class="zmdi zmdi-account "></i></label>


                                @Html.EditorFor(model => model.FirstName, new
                           {
                               htmlAttributes = new
                               {
                                   @class = "zmdi zmdi-account ",
                                   @type = "text",
                                   @id = "name",
                                   @placeholder = "Your first name",
                                   @required = true,
                                   @autofocus = "autofocus",
                               }
                           }
                               )
                                @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label for="name"><i class="zmdi zmdi-account "></i></label>

                                @Html.EditorFor(model => model.LastName, new
                                         {
                                             htmlAttributes = new
                                             {
                                         @class = "zmdi zmdi-account ",
                                         @type = "text",
                                         @id = "name",

                                         @placeholder = "Your last name",
                                         @required = true,
                                         @autofocus = "autofocus",
                                             }
                                         })
                                @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label for="email"><i class="zmdi zmdi-email"></i></label>

                                @Html.EditorFor(model => model.Email, new
                                {
                                    htmlAttributes = new
                                    {
                                   @class = "zmdi zmdi-email",
                                   @id = "email",
                                   @type = "email",
                                   placeholder = "Your Email",
                                   @required = true,
                                   @autofocus = "autofocus",
                           }
                                })
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label for="pass"><i class="zmdi zmdi-lock"></i></label>
                                @Html.EditorFor(model => model.Password, new
                                 {
                                     htmlAttributes = new
                                  {

                                   @class = "zmdi zmdi-lock",
                                   @type = "password",
                                   @placeholder = "Your password",
                                   @id = "pass",
                                   @required = true,
                                   @autofocus = "autofocus",
                               }
                           })
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label for="re-pass"><i class="zmdi zmdi-lock-outline"></i></label>
                                @Html.EditorFor(model => model.ConfirmPassword, new
                           {
                               htmlAttributes = new
                               {
                                   @class = "zmdi zmdi-lock-outline",
                                   @type = "password",
                                   @placeholder = "Repeat your password",
                                   @id = "re_pass",
                                   @required = true,
                                   @autofocus = "autofocus",
                               }
                           })
                                @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label for="name"><i class="zmdi zmdi-city"></i></label>
                                @Html.EditorFor(model => model.DiaChi, new
                           {
                               htmlAttributes = new
                               {
                                   @class = "zmdi zmdi-city ",
                                   @type = "text",
                                   @placeholder = "Your address",
                                   @id = "name",
                                   @required = true,
                                   @autofocus = "autofocus",
                               }
                           })
                                @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
                            </div>
                            @ViewBag.Error
                            <div class="form-group">
                                <input type="checkbox" name="agree-term" id="agree-term" class="agree-term" />
                                <label for="agree-term" class="label-agree-term"><span><span></span></span>I agree all statements in  <a href="#" class="term-service">Terms of service</a></label>
                            </div>
                            <div class="form-group form-button">
                                <input type="submit" name="signup" id="signup" class="form-submit" value="Đăng ký" />
                            </div>
                        }
                    </form>
                </div>
                <div class="signup-image">
                    <figure>
                        
                        <img src="~/Assets/account/images/8.jpg" alt="sing up image"/>
                    </figure>
                    <a href="#" class="signup-image-link">I am already member</a>
                </div>
            </div>
        </div>
    </section>
</div>
<!-- JS -->
<script src="vendor/jquery/jquery.min.js"></script>
<script src="js/main.js"></script>
