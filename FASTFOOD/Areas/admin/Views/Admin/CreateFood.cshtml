@model FASTFOOD.MONAN

@{
    ViewBag.Title = "CreateFood";

}

<h2>Thêm món ăn mới</h2>

@using (Html.BeginForm("CreateFood", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


 

    <div class="form-group">
       Tên loại:
        <div class="col-md-4">
            @Html.DropDownList("MSLOAI", (IEnumerable<SelectListItem>)ViewBag.LOAIMONANs, "---Chọn loại---", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.MSLOAI, "", new { @class = "text-danger" })
        </div>
    </div>

 

    <div class="form-group">
        Tên món:
        <div class="col-md-4">
            @Html.EditorFor(model => model.TENMONAN, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TENMONAN, "", new { @class = "text-danger" })
        </div>
    </div>



    <div class="form-group">
        Đơn giá:
        <div class="col-md-4">
            @Html.EditorFor(model => model.DONGIA, new { htmlAttributes = new { @class = "form-control", @Type = "number" } })
            @Html.ValidationMessageFor(model => model.DONGIA, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group ">
        Chọn file:
        <div class="col-md-4">
            <input class="form-control" type="file" id="fileUpload" required = "true" name="fileUpload">
        </div>
    </div>
    @ViewBag.ThongBao
    <div class="form-group">
        <div class="col-md-offset-2 col-md-4">
            <input type="submit" value="Thêm" class="btn btn-outline-success" />
            <a href="~/admin/Admin/getListFood" class="btn btn-outline-info">Trở lại</a>

        </div>
    </div>
</div>
}


